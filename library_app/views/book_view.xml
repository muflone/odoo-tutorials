<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_form_book" model="ir.ui.view">
        <field name="name">Book Form</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <form string="Book">
                <header>
                    <!-- Buttons will go here -->
                    <button name="button_check_isbn"
                            type="object"
                            string="Check ISBN" />
                </header>
                <sheet>
                    <!-- Content goes here -->
                    <group name="group_top">
                        <group name="group_left">
                            <field name="book_type" />
                            <field name="name" />
                            <field name="author_ids" widget="many2many_tags" />
                            <field name="publisher_id" />
                            <field name="category_id" />
                            <field name="date_published" />
                        </group>
                        <group name="group_right">
                            <field name="isbn" />
                            <field name="active" />
                            <field name="image" widget="image" />
                        </group>
                        <group name="group_three">
                            <field name="notes" />
                            <field name="descr" />
                        </group>
                        <group name="group_four">
                            <field name="copies" />
                            <field name="avg_rating" />
                            <field name="price" />
                            <field name="currency_id" />
                        </group>
                        <group name="group_five">
                            <field name="date_published" />
                            <field name="last_borrow_date" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_tree_book" model="ir.ui.view">
        <field name="name">Book List</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="book_type" />
                <field name="author_ids" widget="many2many_tags" />
                <field name="publisher_id" />
                <field name="date_published" />
            </tree>
        </field>
    </record>

    <record id="view_search_book" model="ir.ui.view">
        <field name="name">Book Filters</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <search>
                <field name="publisher_id" />
                <filter name="filter_active"
                        string="Active"
                        domain="[('active', '=', True)]" />
                <filter name="filter_inactive"
                        string="Inactive"
                        domain="[('active', '=', False)]" />
                <filter name="filter_book_type_paper"
                        string="Paperback"
                        domain="[('book_type', '=', 'paper')]" />
                <filter name="filter_book_type_hard"
                        string="Hardcover"
                        domain="[('book_type', '=', 'hard')]" />
                <filter name="filter_book_type_electronic"
                        string="Electronic"
                        domain="[('book_type', '=', 'electronic')]" />
                <filter name="filter_book_type_other"
                        string="Other type"
                        domain="[('|'),
                                 ('book_type', '=', 'other'),
                                 ('book_type', '=', False)]" />
            </search>
        </field>
    </record>
</odoo>
